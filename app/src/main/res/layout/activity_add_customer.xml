<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_customer">


    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/cname"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="140dp"/>


    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Address"
        android:textSize="20sp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"/>
    <EditText
        android:id="@+id/caddres"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Phone no."
        android:textSize="20sp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/cphone"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Phone no."
        android:textSize="20sp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/camount"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Date"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/cpdate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="dd/mm/YYYY"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="140dp"
        android:inputType="date"        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Plan :"
        android:textSize="20sp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="60dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpdate"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/cmonth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 month" />

        <RadioButton
            android:id="@+id/cmonth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 month" />

        <RadioButton
            android:id="@+id/cmonth6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 month" />

        <RadioButton
            android:id="@+id/cyear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 year" />


    </RadioGroup>




</RelativeLayout>