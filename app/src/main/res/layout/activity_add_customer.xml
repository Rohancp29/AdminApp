<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_customer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="-310dp"
        android:layout_marginEnd="-70dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Customer Details of"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="abc"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <EditText
                android:id="@+id/cname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:hint="Enter Customer Name"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />



            <EditText
                android:id="@+id/cnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:ems="10"
                android:textSize="18sp"
                android:hint="Enter Mobile Number"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />




            <EditText
                android:id="@+id/caddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:textSize="18sp"
                android:hint="Member Address"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />

            <RadioGroup
                android:id="@+id/cradiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                >


                <RadioButton
                    android:id="@+id/cmonth1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="1 Month"/>

                <RadioButton
                    android:id="@+id/cmonth3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="3 Month"/>
                <RadioButton
                    android:id="@+id/cmonth6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="6 Month"/>

                <RadioButton
                    android:id="@+id/cyear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="1 Year"/>

            </RadioGroup>
            <EditText
                android:id="@+id/cpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:hint="Paid Fees"
                android:textSize="18sp"
                android:inputType="number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:hint="Select Date"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/dropdown_logo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cjoindate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/csubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Submit" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>